{% comment %}
  Brand Collections Grid
  Displays brand logos in a clean grid layout for the collections page
{% endcomment %}

<style>
.brand-collections-section {
  background: var(--gharyaal-black, #000000);
  padding: 60px 20px;
  min-height: 60vh;
}

.brand-collections-container {
  max-width: 1400px;
  margin: 0 auto;
}

.brand-collections-heading {
  text-align: center;
  font-size: clamp(2rem, 4vw, 3rem);
  font-weight: 700;
  color: var(--gharyaal-gold, #D4AF37);
  margin: 0 0 60px;
  text-transform: uppercase;
  letter-spacing: 3px;
}

.brand-collections-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 30px;
  max-width: 1200px;
  margin: 0 auto;
  padding: 0;
  list-style: none;
}

.brand-collection-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-decoration: none;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 40px 25px;
  border-radius: 16px;
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
}

.brand-collection-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(212, 175, 55, 0.1) 0%, transparent 100%);
  opacity: 0;
  transition: opacity 0.4s ease;
  pointer-events: none;
}

.brand-collection-card:hover {
  transform: translateY(-12px);
  background: rgba(212, 175, 55, 0.08);
  border-color: rgba(212, 175, 55, 0.4);
  box-shadow: 0 20px 60px rgba(212, 175, 55, 0.25);
}

.brand-collection-card:hover::before {
  opacity: 1;
}

.brand-collection-logo {
  width: 100%;
  max-width: 120px;
  height: 95px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20px;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  z-index: 1;
}

.brand-collection-card:hover .brand-collection-logo {
  transform: scale(1.15);
}

.brand-collection-logo img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  filter: brightness(1) contrast(1.1);
  transition: all 0.4s ease;
}

.brand-collection-card:hover .brand-collection-logo img {
  filter: brightness(1.1) contrast(1.2);
}

.brand-collection-name {
  font-size: 1rem;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
  text-transform: uppercase;
  letter-spacing: 1.5px;
  transition: all 0.3s ease;
  text-align: center;
  position: relative;
  z-index: 1;
}

.brand-collection-card:hover .brand-collection-name {
  color: var(--gharyaal-gold, #D4AF37);
  transform: translateY(-2px);
}

/* Responsive Grid Adjustments */
@media screen and (min-width: 1200px) {
  .brand-collections-grid {
    grid-template-columns: repeat(4, 1fr);
  }
}

@media screen and (min-width: 768px) and (max-width: 1199px) {
  .brand-collections-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 25px;
  }
  
  .brand-collection-card {
    padding: 35px 20px;
  }
}

@media screen and (max-width: 767px) {
  .brand-collections-section {
    padding: 40px 15px;
  }
  
  .brand-collections-heading {
    margin-bottom: 40px;
    font-size: 2rem;
  }
  
  .brand-collections-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }
  
  .brand-collection-card {
    padding: 30px 15px;
  }
  
  .brand-collection-logo {
    max-width: 100px;
    height: 80px;
    margin-bottom: 15px;
  }
  
  .brand-collection-name {
    font-size: 0.85rem;
    letter-spacing: 1px;
  }
}

@media screen and (max-width: 480px) {
  .brand-collections-grid {
    gap: 15px;
  }
  
  .brand-collection-card {
    padding: 25px 12px;
  }
  
  .brand-collection-logo {
    max-width: 85px;
    height: 70px;
  }
  
  .brand-collection-name {
    font-size: 0.75rem;
  }
}
</style>

