{% comment %}
  Dispatch Video Section - Gharyaal Watch Store
  Shows dispatch video with description text
{% endcomment %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    dispatch-video
    spacing-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
  "
>
  <div class="dispatch-video__container">
    <div class="dispatch-video__media">
      {% if section.settings.video != blank %}
        <div class="dispatch-video__video-wrapper">
          {{
            section.settings.video
            | video_tag:
              autoplay: true,
              loop: true,
              muted: true,
              controls: false,
              playsinline: true,
              class: 'dispatch-video__video'
          }}
        </div>
      {% else %}
        <div class="dispatch-video__placeholder">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <p>Video Placeholder</p>
          <p class="dispatch-video__placeholder-text">Upload a video in theme editor</p>
        </div>
      {% endif %}
    </div>

    <div class="dispatch-video__content">
      {% if section.settings.heading != blank %}
        <h2 class="dispatch-video__heading">{{ section.settings.heading }}</h2>
      {% endif %}

      {% if section.settings.description != blank %}
        <div class="dispatch-video__description rte">
          {{ section.settings.description }}
        </div>
      {% endif %}

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="dispatch-video__button button">
          {{ section.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% stylesheet %}
  .dispatch-video {
    overflow: hidden;
  }

  .dispatch-video__container {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 60px;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
  }

  .dispatch-video__media {
    position: relative;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .dispatch-video__video-wrapper {
    position: relative;
    width: 100%;
    max-width: 360px;
    aspect-ratio: 9 / 16;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    border: 2px solid rgba(212, 175, 55, 0.3);
  }

  .dispatch-video__video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .dispatch-video__placeholder {
    width: 100%;
    max-width: 360px;
    aspect-ratio: 9 / 16;
    background: rgba(255, 255, 255, 0.05);
    border: 2px dashed rgba(212, 175, 55, 0.3);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.5);
    padding: 20px;
    text-align: center;
  }

  .dispatch-video__placeholder svg {
    width: 80px;
    height: 80px;
    margin-bottom: 16px;
    color: #D4AF37;
  }

  .dispatch-video__placeholder p {
    margin: 4px 0;
    font-size: 1rem;
  }

  .dispatch-video__placeholder-text {
    font-size: 0.85rem !important;
    opacity: 0.7;
  }

  .dispatch-video__content {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .dispatch-video__heading {
    font-size: clamp(1.75rem, 3vw, 2.5rem);
    font-weight: 700;
    color: #FFFFFF;
    margin: 0;
    line-height: 1.2;
    letter-spacing: 0.5px;
  }

  .dispatch-video__description {
    font-size: 1.05rem;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.85);
    margin: 0;
  }

  .dispatch-video__description p {
    margin: 0 0 16px;
  }

  .dispatch-video__description p:last-child {
    margin-bottom: 0;
  }

  .dispatch-video__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 14px 32px;
    background: #D4AF37;
    color: #000000;
    text-decoration: none;
    border-radius: 6px;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.3s ease;
    width: fit-content;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .dispatch-video__button:hover {
    background: #EBC656;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
  }

  /* Mobile Styles */
  @media screen and (max-width: 989px) {
    .dispatch-video__container {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .dispatch-video__media {
      order: 1;
    }

    .dispatch-video__content {
      order: 2;
      text-align: center;
      align-items: center;
    }

    .dispatch-video__video-wrapper,
    .dispatch-video__placeholder {
      max-width: 280px;
    }

    .dispatch-video__heading {
      font-size: 1.5rem;
    }

    .dispatch-video__description {
      font-size: 0.95rem;
    }
  }

  @media screen and (max-width: 480px) {
    .dispatch-video__video-wrapper,
    .dispatch-video__placeholder {
      max-width: 240px;
    }

    .dispatch-video__heading {
      font-size: 1.35rem;
    }

    .dispatch-video__description {
      font-size: 0.9rem;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Dispatch Video",
  "class": "section-dispatch-video",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Video",
      "info": "Upload a 9:16 ratio video (vertical/reel format)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Dispatch Video for Your Order"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>We record and send a dispatch video for every order before shipping. This ensures complete transparency and lets you see exactly what you're receiving before it leaves our warehouse.</p><p>Your satisfaction and trust are our top priorities.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Dispatch Video"
    }
  ]
}
{% endschema %}
