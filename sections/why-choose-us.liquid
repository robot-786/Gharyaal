{% comment %}
  Why Choose Us Section - Comparison Table
  Displays trust and value propositions in comparison format
{% endcomment %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {% render 'why-choose-us-product' %}
</div>

{% schema %}
{
  "name": "Why Choose Us",
  "class": "section-why-choose-us",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
    "default": 48
  }
],
"blocks": [
  {
    "type": "feature",
    "name": "Feature",
    "settings": [
      {
        "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG (optional)",
          "info": "Paste SVG code here if you prefer SVG icons"
        },
        {
          "type": "select",
          "id": "icon_name",
          "label": "Fallback icon",
          "options": [
            { "value": "checkmark", "label": "Checkmark" },
            { "value": "truck", "label": "Truck" },
            { "value": "shield", "label": "Shield" },
            { "value": "star", "label": "Star" },
            { "value": "lock", "label": "Lock" },
            { "value": "heart", "label": "Heart" },
            { "value": "clock", "label": "Clock" },
            { "value": "gift", "label": "Gift" }
          ],
          "default": "checkmark",
          "info": "Used when no image or SVG is provided"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Premium Quality"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "We deliver exceptional quality watches that exceed expectations."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us",
      "category": "Content",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon_name": "checkmark",
            "title": "Premium Quality",
            "description": "Master copies crafted with precision and attention to detail."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "truck",
            "title": "Fast Shipping",
            "description": "Quick and secure delivery across Pakistan."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "shield",
            "title": "100% Authentic",
            "description": "Guaranteed authenticity on every timepiece."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "heart",
            "title": "Customer Support",
            "description": "24/7 support to help you with any questions."
          }
        }
      ]
    }
  ]
}
{% endschema %}
