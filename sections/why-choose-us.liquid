{% comment %}
  Why Choose Us Section - Gharyaal Watch Store
  Displays feature icons with titles and descriptions in a grid layout
{% endcomment %}

<div class="section-background color-{{ section.settings.color_scheme }}"></div>

<div
  class="
    section
    section--{{ section.settings.section_width }}
    color-{{ section.settings.color_scheme }}
    why-choose-us
    spacing-style
    gap-style
  "
  style="
    {% render 'spacing-style', settings: section.settings %}
    {% render 'gap-style', value: section.settings.gap %}
  "
>
  {% if section.settings.heading != blank %}
    <div class="why-choose-us__header">
      <h2 class="why-choose-us__title h2">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="why-choose-us__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="why-choose-us__grid why-choose-us__grid--{{ section.settings.columns }}-columns">
    {% for block in section.blocks %}
      <div class="why-choose-us__item" {{ block.shopify_attributes }}>
        {% if block.settings.icon != blank %}
          <div class="why-choose-us__icon">
            {{ block.settings.icon | image_url: width: 80 | image_tag: loading: 'lazy' }}
          </div>
        {% elsif block.settings.icon_svg != blank %}
          <div class="why-choose-us__icon why-choose-us__icon--svg">
            {{ block.settings.icon_svg }}
          </div>
        {% else %}
          <div class="why-choose-us__icon why-choose-us__icon--placeholder">
            {% render 'icon', icon: block.settings.icon_name, size: 48 %}
          </div>
        {% endif %}
        
        {% if block.settings.title != blank %}
          <h3 class="why-choose-us__item-title h4">{{ block.settings.title }}</h3>
        {% endif %}
        
        {% if block.settings.description != blank %}
          <p class="why-choose-us__item-description">{{ block.settings.description }}</p>
        {% endif %}
      </div>
    {% endfor %}
  </div>
</div>

{% stylesheet %}
  .why-choose-us {
    text-align: center;
  }

  .why-choose-us__header {
    margin-bottom: var(--padding-xl);
  }

  .why-choose-us__title {
    margin: 0 0 var(--padding-sm);
  }

  .why-choose-us__subtitle {
    margin: 0;
    opacity: 0.8;
    max-width: 600px;
    margin-inline: auto;
  }

  .why-choose-us__grid {
    display: grid;
    gap: var(--padding-lg);
  }

  .why-choose-us__grid--2-columns {
    grid-template-columns: repeat(2, 1fr);
  }

  .why-choose-us__grid--3-columns {
    grid-template-columns: repeat(3, 1fr);
  }

  .why-choose-us__grid--4-columns {
    grid-template-columns: repeat(4, 1fr);
  }

  @media screen and (max-width: 749px) {
    .why-choose-us__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 480px) {
    .why-choose-us__grid {
      grid-template-columns: 1fr;
    }
  }

  .why-choose-us__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: var(--padding-lg);
    border-radius: var(--border-radius);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .why-choose-us__item:hover {
    transform: translateY(-4px);
  }

  .why-choose-us__icon {
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--padding-md);
    color: var(--color-primary);
  }

  .why-choose-us__icon img,
  .why-choose-us__icon svg {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  .why-choose-us__icon--svg svg {
    width: 48px;
    height: 48px;
  }

  .why-choose-us__item-title {
    margin: 0 0 var(--padding-xs);
    font-size: var(--font-size--lg);
  }

  .why-choose-us__item-description {
    margin: 0;
    font-size: var(--font-size--sm);
    opacity: 0.8;
    line-height: 1.6;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "Why Choose Us",
  "class": "section-why-choose-us",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Choose Us"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Quality, Trust, and Excellence in Every Timepiece"
    },
    {
      "type": "select",
      "id": "columns",
      "label": "Columns",
      "options": [
        { "value": "2", "label": "2" },
        { "value": "3", "label": "3" },
        { "value": "4", "label": "4" }
      ],
      "default": "4"
    },
    {
      "type": "select",
      "id": "section_width",
      "label": "Section width",
      "options": [
        { "value": "page-width", "label": "Page width" },
        { "value": "full-width", "label": "Full width" }
      ],
      "default": "page-width"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap between items",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 24
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 48
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon image"
        },
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG (optional)",
          "info": "Paste SVG code here if you prefer SVG icons"
        },
        {
          "type": "select",
          "id": "icon_name",
          "label": "Fallback icon",
          "options": [
            { "value": "checkmark", "label": "Checkmark" },
            { "value": "truck", "label": "Truck" },
            { "value": "shield", "label": "Shield" },
            { "value": "star", "label": "Star" },
            { "value": "lock", "label": "Lock" },
            { "value": "heart", "label": "Heart" },
            { "value": "clock", "label": "Clock" },
            { "value": "gift", "label": "Gift" }
          ],
          "default": "checkmark",
          "info": "Used when no image or SVG is provided"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Premium Quality"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "We deliver exceptional quality watches that exceed expectations."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us",
      "category": "Content",
      "blocks": [
        {
          "type": "feature",
          "settings": {
            "icon_name": "checkmark",
            "title": "Premium Quality",
            "description": "Master copies crafted with precision and attention to detail."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "truck",
            "title": "Fast Shipping",
            "description": "Quick and secure delivery across Pakistan."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "shield",
            "title": "100% Authentic",
            "description": "Guaranteed authenticity on every timepiece."
          }
        },
        {
          "type": "feature",
          "settings": {
            "icon_name": "heart",
            "title": "Customer Support",
            "description": "24/7 support to help you with any questions."
          }
        }
      ]
    }
  ]
}
{% endschema %}
