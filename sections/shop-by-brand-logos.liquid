<script>
document.addEventListener('DOMContentLoaded', function() {
  const wrapper = document.querySelector('.brand-logos-wrapper');
  if (!wrapper) return;

  const grid = wrapper.querySelector('.brand-logos-grid');
  const prevBtn = wrapper.querySelector('.brand-nav--prev');
  const nextBtn = wrapper.querySelector('.brand-nav--next');
  
  if (!grid || !prevBtn || !nextBtn) return;

  const scrollAmount = 280; // Approximate width of one brand item + gap

  prevBtn.addEventListener('click', function(e) {
    e.preventDefault();
    grid.scrollBy({
      left: -scrollAmount,
      behavior: 'smooth'
    });
  });

  nextBtn.addEventListener('click', function(e) {
    e.preventDefault();
    grid.scrollBy({
      left: scrollAmount,
      behavior: 'smooth'
    });
  });
});
</script>

