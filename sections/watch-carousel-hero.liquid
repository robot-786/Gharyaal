<watch-carousel-hero>
<div class="watch-carousel-hero" style="--section-height: {{ section.settings.section_height }}px; background-color: {{ section.settings.background_color }};">
  <div class="watch-carousel-container">
    <div class="watch-carousel-track" data-current-slide="0">
      {% for block in section.blocks %}
        {% if block.type == 'watch_slide' %}
          <div class="watch-slide {% if forloop.first %}active{% endif %}" data-slide-index="{{ forloop.index0 }}" {{ block.shopify_attributes }}>
            {% if block.settings.image != blank %}
              <div class="watch-image-wrapper">
                <img 
                  src="{{ block.settings.image | image_url: width: 800 }}"
                  srcset="{{ block.settings.image | image_url: width: 400 }} 400w,
                          {{ block.settings.image | image_url: width: 600 }} 600w,
                          {{ block.settings.image | image_url: width: 800 }} 800w"
                  sizes="(max-width: 768px) 90vw, 33vw"
                  alt="{{ block.settings.image.alt | escape }}"
                  loading="lazy"
                  width="800"
                  height="800"
                >
              </div>
            {% else %}
              {%- comment -%} Hardcoded test images for local development {%- endcomment -%}
              {% assign watch_images = 'watch-2-patek.png,watch-3-ap.png,watch-4-omega.png,watch-5-tag.png' | split: ',' %}
              {% assign watch_index = forloop.index0 | modulo: 5 %}
              {% assign watch_image = watch_images[watch_index] %}
              <div class="watch-image-wrapper">
                <img 
                  src="{{ watch_image | asset_url }}"
                  alt="Luxury Watch {{ forloop.index }}"
                  width="800"
                  height="800"
                >
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    {% if section.blocks.size > 1 %}
      <button class="carousel-nav carousel-nav--prev" aria-label="Previous watch">‹</button>
      <button class="carousel-nav carousel-nav--next" aria-label="Next watch">›</button>
    {% endif %}
    
    <div class="swipe-hint">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M15 18L9 12L15 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      <span>Swipe</span>
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M9 18L15 12L9 6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
  </div>
  
  <div class="watch-carousel-content">
    {% if section.settings.heading != blank %}
      <h1 class="watch-carousel-heading" style="color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h1>
    {% endif %}
    
    {% if section.settings.subheading != blank %}
      <p class="watch-carousel-subheading" style="color: {{ section.settings.subheading_color }};">
        {{ section.settings.subheading }}
      </p>
    {% endif %}
    
    {% if section.settings.button_text != blank %}
      <a href="#shop-by-brand" class="watch-carousel-button" style="background-color: {{ section.settings.button_bg_color }}; color: {{ section.settings.button_text_color }};">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>
</watch-carousel-hero>

<script>
class WatchCarouselHero extends HTMLElement {
  constructor() {
    super();
    this.carousel = this.querySelector('.watch-carousel-hero');
    this.track = this.querySelector('.watch-carousel-track');
    this.slides = this.querySelectorAll('.watch-slide');
    this.prevBtn = this.querySelector('.carousel-nav--prev');
    this.nextBtn = this.querySelector('.carousel-nav--next');
    this.currentSlide = 0;
    this.autoplayInterval = null;
    this.autoplay = {{ section.settings.enable_autoplay | json }};
    this.autoplaySpeed = {{ section.settings.autoplay_speed | times: 1000 }};
    
    this.init();
  }

  init() {
    if (this.slides.length <= 1) return;

    this.prevBtn?.addEventListener('click', () => this.goToPrevSlide());
    this.nextBtn?.addEventListener('click', () => this.goToNextSlide());
    
    // Touch support
    let touchStartX = 0;
    let touchEndX = 0;
    
    this.track.addEventListener('touchstart', (e) => {
      touchStartX = e.changedTouches[0].screenX;
    });
    
    this.track.addEventListener('touchend', (e) => {
      touchEndX = e.changedTouches[0].screenX;
      this.handleSwipe(touchStartX, touchEndX);
    });

    // Keyboard navigation
    document.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowLeft') this.goToPrevSlide();
      if (e.key === 'ArrowRight') this.goToNextSlide();
    });

    if (this.autoplay) {
      this.startAutoplay();
      this.carousel.addEventListener('mouseenter', () => this.stopAutoplay());
      this.carousel.addEventListener('mouseleave', () => this.startAutoplay());
    }

    this.updateSlides();
  }

  handleSwipe(startX, endX) {
    const swipeThreshold = 50;
    if (startX - endX > swipeThreshold) {
      this.goToNextSlide();
    } else if (endX - startX > swipeThreshold) {
      this.goToPrevSlide();
    }
  }

  goToNextSlide() {
    this.currentSlide = (this.currentSlide + 1) % this.slides.length;
    this.updateSlides();
  }

  goToPrevSlide() {
    this.currentSlide = (this.currentSlide - 1 + this.slides.length) % this.slides.length;
    this.updateSlides();
  }

  updateSlides() {
    this.track.setAttribute('data-current-slide', this.currentSlide);
    
    this.slides.forEach((slide, index) => {
      slide.classList.remove('active', 'prev', 'next', 'hidden');
      
      if (index === this.currentSlide) {
        slide.classList.add('active');
      } else if (index === (this.currentSlide - 1 + this.slides.length) % this.slides.length) {
        slide.classList.add('prev');
      } else if (index === (this.currentSlide + 1) % this.slides.length) {
        slide.classList.add('next');
      } else {
        slide.classList.add('hidden');
      }
    });
  }

  startAutoplay() {
    if (!this.autoplay) return;
    this.stopAutoplay();
    this.autoplayInterval = setInterval(() => this.goToNextSlide(), this.autoplaySpeed);
  }

  stopAutoplay() {
    if (this.autoplayInterval) {
      clearInterval(this.autoplayInterval);
      this.autoplayInterval = null;
    }
  }
}

if (!customElements.get('watch-carousel-hero')) {
  customElements.define('watch-carousel-hero', WatchCarouselHero);
}
</script>

<style>
/* Smooth scroll for anchor links */
html {
  scroll-behavior: smooth;
}

.watch-carousel-hero {
  position: relative;
  width: 100%;
  height: var(--section-height, 700px);
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.watch-carousel-container {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.watch-carousel-track {
  position: relative;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.watch-slide {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) scale(0.6);
  opacity: 0;
  transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 1;
  pointer-events: none;
}

.watch-slide.active {
  transform: translate(-50%, -50%) scale(1.25);
  opacity: 1;
  z-index: 3;
  pointer-events: auto;
}

.watch-slide.active::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120%;
  height: 120%;
  background: radial-gradient(circle, rgba(212, 175, 55, 0.3) 0%, rgba(212, 175, 55, 0.1) 40%, transparent 70%);
  filter: blur(40px);
  z-index: -1;
  animation: pulse-glow 3s ease-in-out infinite;
}

@keyframes pulse-glow {
  0%, 100% {
    opacity: 0.6;
    transform: translate(-50%, -50%) scale(1);
  }
  50% {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1.1);
  }
}

.watch-slide.prev {
  transform: translate(-120%, -50%) scale(0.7);
  opacity: 0.5;
  z-index: 2;
  filter: brightness(0.4) grayscale(0.5);
}

.watch-slide.next {
  transform: translate(20%, -50%) scale(0.7);
  opacity: 0.5;
  z-index: 2;
  filter: brightness(0.4) grayscale(0.5);
}

.watch-slide.hidden {
  opacity: 0;
  transform: translate(-50%, -50%) scale(0.5);
  z-index: 0;
}

.watch-image-wrapper,
.watch-image-placeholder {
  width: 100%;
  max-width: 600px;
  aspect-ratio: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.watch-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: contain;
  display: block;
}

.watch-image-placeholder {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 8px;
}

.carousel-nav {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: transparent !important;
  border: none !important;
  outline: none !important;
  color: var(--gharyaal-gold, #D4AF37);
  cursor: pointer;
  z-index: 100;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  pointer-events: auto;
  padding: 10px;
  font-size: 48px;
  font-weight: 300;
  line-height: 1;
  opacity: 0.7;
  box-shadow: none !important;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none;
}

.carousel-nav:hover {
  opacity: 1;
  color: #ffd700;
  transform: translateY(-50%) scale(1.2);
  outline: none !important;
  border: none !important;
  box-shadow: none !important;
}

.carousel-nav:focus {
  outline: none !important;
  border: none !important;
  box-shadow: none !important;
}

.carousel-nav:active {
  outline: none !important;
  border: none !important;
  box-shadow: none !important;
}

.carousel-nav:focus-visible {
  outline: none !important;
  border: none !important;
  box-shadow: none !important;
}

.carousel-nav--prev {
  left: 3%;
}

.carousel-nav--next {
  right: 3%;
}

.carousel-nav svg {
  display: none;
}

.swipe-hint {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);
  display: none;
  align-items: center;
  gap: 8px;
  color: rgba(212, 175, 55, 0.7);
  font-size: 0.85rem;
  font-weight: 500;
  letter-spacing: 1px;
  text-transform: uppercase;
  z-index: 50;
  animation: swipe-hint-pulse 2s ease-in-out infinite;
}

.swipe-hint svg {
  opacity: 0.6;
}

@keyframes swipe-hint-pulse {
  0%, 100% {
    opacity: 0.5;
  }
  50% {
    opacity: 1;
  }
}

.watch-carousel-content {
  position: relative;
  text-align: center;
  z-index: 5;
  max-width: 90%;
  margin: 0 auto;
  padding: 40px 20px 0;
}

.watch-carousel-heading {
  font-size: clamp(2rem, 5vw, 4rem);
  font-weight: 700;
  margin: 0 0 1rem;
  letter-spacing: 2px;
  text-transform: uppercase;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
}

.watch-carousel-subheading {
  font-size: clamp(1rem, 2vw, 1.5rem);
  margin: 0 0 2rem;
  font-weight: 300;
  letter-spacing: 1px;
  text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.8);
}

.watch-carousel-button {
  display: inline-block;
  padding: 16px 48px;
  font-size: 1rem;
  font-weight: 600;
  text-decoration: none;
  border-radius: 50px;
  transition: all 0.3s ease;
  letter-spacing: 1px;
  text-transform: uppercase;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
}

.watch-carousel-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 25px rgba(212, 175, 55, 0.4);
}

/* Mobile Responsive */
@media screen and (max-width: 768px) {
  .watch-carousel-hero {
    height: auto;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    padding: 20px 0;
  }

  .watch-carousel-container {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 60vh;
    position: relative;
  }

  .carousel-nav {
    display: none;
  }

  .swipe-hint {
    display: flex;
    bottom: 30px;
    font-size: 0.8rem;
  }

  .watch-slide.prev,
  .watch-slide.next {
    opacity: 0.25;
    pointer-events: none;
    display: block;
  }

  .watch-slide.prev {
    transform: translate(-130%, -50%) scale(0.5);
    filter: brightness(0.3) grayscale(0.6);
  }

  .watch-slide.next {
    transform: translate(30%, -50%) scale(0.5);
    filter: brightness(0.3) grayscale(0.6);
  }

  .watch-slide.active {
    transform: translate(-50%, -50%) scale(1.4);
  }

  .watch-image-wrapper,
  .watch-image-placeholder {
    max-width: 75vw;
  }

  .swipe-hint {
    bottom: 30px;
    font-size: 0.8rem;
  }

  .watch-carousel-content {
    position: relative;
    padding: 30px 20px 40px;
    margin: 0;
    max-width: 100%;
  }

  .watch-carousel-heading {
    font-size: clamp(1.75rem, 9vw, 2.5rem);
    margin-bottom: 0.75rem;
    line-height: 1.1;
  }

  .watch-carousel-subheading {
    font-size: clamp(1rem, 4.5vw, 1.25rem);
    margin-bottom: 1.5rem;
  }

  .watch-carousel-button {
    padding: 14px 36px;
    font-size: 0.9rem;
  }
}

@media screen and (max-width: 480px) {
  .watch-slide.active {
    transform: translate(-50%, -50%) scale(1.5);
  }

  .watch-slide.prev {
    transform: translate(-135%, -50%) scale(0.45);
  }

  .watch-slide.next {
    transform: translate(35%, -50%) scale(0.45);
  }

  .watch-image-wrapper,
  .watch-image-placeholder {
    max-width: 80vw;
  }

  .swipe-hint {
    font-size: 0.75rem;
    gap: 6px;
  }

  .swipe-hint svg {
    width: 16px;
    height: 16px;
  }

  .watch-carousel-heading {
    font-size: clamp(1.5rem, 7vw, 2rem);
  }

  .watch-carousel-subheading {
    font-size: clamp(0.9rem, 4vw, 1.1rem);
  }

  .watch-carousel-button {
    padding: 12px 30px;
    font-size: 0.85rem;
  }
}
</style>

