{%- comment -%}
  Gharyaal Cart Styling
  Luxury watch brand cart page enhancements
{%- endcomment -%}

<style>
  /* ========================================
     GHARYAAL CART - LUXURY STYLING
     ======================================== */
  
  :root {
    --gharyaal-gold: #D4AF37;
    --gharyaal-gold-light: #E8C963;
    --gharyaal-gold-dark: #B8960F;
    --gharyaal-black: #0A0A0A;
    --gharyaal-dark-gray: #1A1A1A;
    --gharyaal-light-bg: #F8F8F8;
    --gharyaal-text: #333333;
    --gharyaal-text-muted: #666666;
  }

  /* Cart Page Container */
  .cart-page {
    background: var(--gharyaal-light-bg);
    min-height: 60vh;
  }

  /* Cart Title Styling */
  .cart-title {
    font-family: var(--font-heading--family), serif;
    font-weight: 600;
    letter-spacing: 0.05em;
    color: var(--gharyaal-black);
    position: relative;
    padding-bottom: 1rem;
  }

  .cart-title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 60px;
    height: 2px;
    background: linear-gradient(90deg, var(--gharyaal-gold), var(--gharyaal-gold-light));
  }

  .cart-page--empty .cart-title::after {
    left: 50%;
    transform: translateX(-50%);
  }

  /* Cart Items Table */
  .cart-items__table-row {
    background: #FFFFFF;
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 1rem;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    transition: box-shadow 0.3s ease, transform 0.3s ease;
    border: 1px solid rgba(0, 0, 0, 0.05);
  }

  .cart-items__table-row:hover {
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transform: translateY(-2px);
  }

  .cart-items--dividers .cart-items__table-row {
    border-bottom: none;
  }

  /* Product Image */
  .cart-items__media-container {
    border-radius: 8px;
    overflow: hidden;
    border: 1px solid rgba(212, 175, 55, 0.2);
    transition: border-color 0.3s ease;
  }

  .cart-items__table-row:hover .cart-items__media-container {
    border-color: var(--gharyaal-gold);
  }

  .cart-items__media-image {
    transition: transform 0.3s ease;
  }

  .cart-items__table-row:hover .cart-items__media-image {
    transform: scale(1.02);
  }

  /* Product Title */
  .cart-items__title {
    font-family: var(--font-heading--family), serif;
    font-weight: 600;
    font-size: 1.1rem !important;
    color: var(--gharyaal-black) !important;
    transition: color 0.3s ease;
  }

  .cart-items__title:hover {
    color: var(--gharyaal-gold) !important;
  }

  /* Product Details */
  .cart-items__details {
    color: var(--gharyaal-text-muted) !important;
  }

  .cart-items__variants,
  .cart-items__variant {
    color: var(--gharyaal-text-muted);
    font-size: 0.9rem;
  }

  /* Price Styling */
  .cart-items__price {
    font-family: var(--font-heading--family), serif;
    font-weight: 600;
    font-size: 1.1rem !important;
    color: var(--gharyaal-black) !important;
  }

  /* Quantity Selector */
  .cart-items__quantity .quantity-selector {
    border: 1px solid rgba(0, 0, 0, 0.15);
    border-radius: 8px;
    overflow: hidden;
    background: #FFFFFF;
  }

  .cart-items__quantity .quantity-selector:hover {
    border-color: var(--gharyaal-gold);
  }

  .cart-items__quantity .quantity-selector__button {
    background: transparent;
    border: none;
    color: var(--gharyaal-text);
    transition: all 0.2s ease;
  }

  .cart-items__quantity .quantity-selector__button:hover {
    background: var(--gharyaal-gold);
    color: #FFFFFF;
  }

  /* Remove Button */
  .cart-items__remove {
    color: var(--gharyaal-text-muted);
    transition: color 0.2s ease;
  }

  .cart-items__remove:hover {
    color: #C41E3A;
  }

  /* ========================================
     CART SUMMARY SIDEBAR
     ======================================== */
  
  .cart__container {
    background: #FFFFFF;
    border-radius: 16px;
    padding: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border: 1px solid rgba(212, 175, 55, 0.15);
  }

  .cart__summary-totals {
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    padding-bottom: 1.5rem;
    margin-bottom: 1.5rem;
  }

  .cart__summary-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.75rem;
    color: var(--gharyaal-text);
  }

  .cart__total {
    font-family: var(--font-heading--family), serif;
    font-weight: 700;
    font-size: 1.3rem;
    color: var(--gharyaal-black);
    padding-top: 1rem;
    border-top: 2px solid var(--gharyaal-gold);
    margin-top: 1rem;
  }

  /* Checkout Button */
  .cart__checkout-button,
  .cart-summary__checkout-button {
    background: linear-gradient(135deg, var(--gharyaal-gold), var(--gharyaal-gold-dark)) !important;
    border: none !important;
    color: #FFFFFF !important;
    font-family: var(--font-heading--family), serif;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 1rem 2rem !important;
    border-radius: 8px !important;
    transition: all 0.3s ease !important;
    box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
  }

  .cart__checkout-button:hover,
  .cart-summary__checkout-button:hover {
    background: linear-gradient(135deg, var(--gharyaal-gold-light), var(--gharyaal-gold)) !important;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
  }

  /* Continue Shopping Button */
  .cart-items__empty-button {
    background: var(--gharyaal-black) !important;
    color: #FFFFFF !important;
    border: 2px solid var(--gharyaal-black) !important;
    padding: 1rem 2.5rem !important;
    border-radius: 8px !important;
    font-weight: 600;
    letter-spacing: 0.05em;
    transition: all 0.3s ease !important;
  }

  .cart-items__empty-button:hover {
    background: transparent !important;
    color: var(--gharyaal-black) !important;
  }

  /* Discount Code Section */
  .cart-discount {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    overflow: hidden;
    margin-top: 1rem;
  }

  .cart-discount__input {
    border: none;
    background: var(--gharyaal-light-bg);
    padding: 0.75rem 1rem;
    font-size: 0.9rem;
  }

  .cart-discount__input:focus {
    outline: none;
    background: #FFFFFF;
    box-shadow: inset 0 0 0 2px var(--gharyaal-gold);
  }

  .cart-discount__button {
    background: var(--gharyaal-black) !important;
    color: #FFFFFF !important;
    border: none !important;
    font-weight: 600;
    padding: 0.75rem 1.25rem !important;
  }

  .cart-discount__button:hover {
    background: var(--gharyaal-gold) !important;
  }

  /* Cart Note */
  .cart-note__summary {
    color: var(--gharyaal-text);
    font-weight: 500;
  }

  .cart-note__instructions {
    border: 1px solid rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    background: var(--gharyaal-light-bg);
    padding: 1rem;
    font-size: 0.9rem;
    resize: vertical;
    min-height: 80px;
  }

  .cart-note__instructions:focus {
    outline: none;
    border-color: var(--gharyaal-gold);
    background: #FFFFFF;
  }

  /* Empty Cart State */
  .cart-page--empty {
    text-align: center;
    padding: 4rem 2rem;
  }

  .cart-page--empty .cart-title {
    font-size: 2rem;
    margin-bottom: 1.5rem;
  }

  .cart-page--empty p {
    color: var(--gharyaal-text-muted);
    margin-bottom: 2rem;
    font-size: 1.1rem;
  }

  /* Compare at Price (Sale) */
  .compare-at-price {
    color: var(--gharyaal-text-muted);
    text-decoration: line-through;
    font-size: 0.9em;
    margin-left: 0.5rem;
  }

  /* ========================================
     MOBILE OPTIMIZATIONS (< 750px)
     ======================================== */
  @media screen and (max-width: 749px) {
    /* Cart Page Layout */
    .cart-page {
      padding: 1rem;
      min-height: auto;
    }

    .cart-items-component .section {
      padding-inline: 0;
    }

    /* Cart Title */
    .cart-title {
      font-size: 1.5rem;
      padding-bottom: 0.75rem;
      margin-bottom: 1rem;
    }

    .cart-title::after {
      width: 40px;
    }

    /* Cart Items - Mobile Grid */
    .cart-items__table-row {
      padding: 1rem;
      margin-bottom: 0.75rem;
      border-radius: 10px;
      grid-template-columns: 75px 1fr !important;
      grid-template-areas:
        'media details'
        'media quantity'
        'media price' !important;
      gap: 0.5rem 0.75rem !important;
    }

    .cart-items__table-row:hover {
      transform: none;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
    }

    /* Mobile Product Image */
    .cart-items__media {
      grid-area: media;
    }

    .cart-items__media-container {
      border-radius: 6px;
    }

    /* Mobile Product Details */
    .cart-items__details {
      grid-area: details;
      padding-right: 0;
    }

    .cart-items__title {
      font-size: 0.9rem !important;
      line-height: 1.3;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .cart-items__variants {
      font-size: 0.8rem;
      margin-top: 0.25rem;
    }

    .cart-items__details > div:last-child {
      font-size: 0.85rem;
      margin-top: 0.25rem;
    }

    /* Mobile Price - Below Details */
    .cart-items__price {
      grid-area: price;
      font-size: 0.95rem !important;
      text-align: left !important;
      justify-content: flex-start;
      min-width: unset !important;
      padding-top: 0.25rem;
    }

    /* Mobile Quantity Controls */
    .cart-items__quantity {
      grid-area: quantity;
      margin-top: 0.5rem;
      justify-content: flex-start;
    }

    .cart-items__quantity-controls {
      gap: 0.5rem;
    }

    .cart-items__quantity .quantity-selector {
      height: 36px;
      min-width: 90px;
    }

    .cart-items__quantity .quantity-selector__button {
      padding: 0 0.5rem;
    }

    .cart-items__remove {
      width: 36px;
      height: 36px;
    }

    .cart-items__remove .svg-wrapper {
      width: 18px;
      height: 18px;
    }

    /* Cart Summary - Mobile */
    .cart-page__summary {
      margin-top: 1.5rem;
      padding-top: 0;
    }

    .cart__container {
      padding: 1.25rem;
      border-radius: 12px;
      box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    }

    .cart__summary-totals {
      padding-bottom: 1rem;
      margin-bottom: 1rem;
    }

    .cart__total {
      font-size: 1.1rem;
      padding-top: 0.75rem;
      margin-top: 0.75rem;
    }

    .cart__total-value {
      font-size: 1.25rem !important;
    }

    /* Mobile Checkout Button */
    .cart__checkout-button,
    .cart-summary__checkout-button {
      width: 100%;
      padding: 0.9rem 1.5rem !important;
      font-size: 0.9rem;
      letter-spacing: 0.08em;
    }

    .cart__ctas {
      gap: 0.75rem;
    }

    /* Mobile Discount Section */
    .cart-discount {
      margin-top: 0.75rem;
    }

    .cart-discount__form {
      flex-direction: column;
      gap: 0.5rem;
    }

    .cart-discount__input {
      width: 100%;
      padding: 0.75rem;
    }

    .cart-discount__button {
      width: 100%;
      padding: 0.75rem !important;
    }

    /* Mobile Cart Note */
    .cart-note__instructions {
      min-height: 60px;
      font-size: 0.85rem;
    }

    /* Mobile Empty Cart */
    .cart-page--empty {
      padding: 3rem 1.5rem;
    }

    .cart-page--empty .cart-title {
      font-size: 1.5rem;
    }

    .cart-page--empty p {
      font-size: 1rem;
    }

    .cart-items__empty-button {
      width: 100%;
      padding: 0.9rem 1.5rem !important;
      font-size: 0.9rem;
    }

    /* Hide hover effects on mobile */
    .cart-items__table-row:hover .cart-items__media-container {
      border-color: rgba(212, 175, 55, 0.2);
    }

    .cart-items__table-row:hover .cart-items__media-image {
      transform: none;
    }
  }

  /* ========================================
     SMALL MOBILE (< 400px)
     ======================================== */
  @media screen and (max-width: 399px) {
    .cart-items__table-row {
      grid-template-columns: 65px 1fr !important;
      padding: 0.75rem;
    }

    .cart-items__title {
      font-size: 0.85rem !important;
    }

    .cart-items__quantity .quantity-selector {
      min-width: 80px;
      height: 32px;
    }

    .cart__container {
      padding: 1rem;
    }

    .cart__checkout-button {
      font-size: 0.85rem;
      padding: 0.8rem 1rem !important;
    }
  }

  /* ========================================
     TABLET (750px - 989px)
     ======================================== */
  @media screen and (min-width: 750px) and (max-width: 989px) {
    .cart-items__table-row {
      padding: 1.25rem;
    }

    .cart__container {
      padding: 1.5rem;
    }
  }

  /* Featured Products Section Below Cart */
  .cart-page ~ .product-list-section {
    background: #FFFFFF;
    padding-top: 3rem;
    padding-bottom: 3rem;
  }

  .cart-page ~ .product-list-section h3 {
    font-family: var(--font-heading--family), serif;
    font-weight: 600;
    color: var(--gharyaal-black);
    position: relative;
    display: inline-block;
  }

  .cart-page ~ .product-list-section h3::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--gharyaal-gold);
  }

  @media screen and (max-width: 749px) {
    .cart-page ~ .product-list-section {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
  }
</style>
