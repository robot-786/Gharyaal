<style>
.why-choose-comparison {
  padding: 80px 20px;
  margin: 60px 0;
  background: transparent;
}

.why-choose-comparison__container {
  max-width: 900px;
  margin: 0 auto;
}

.why-choose-comparison__heading {
  text-align: center;
  font-size: clamp(1.75rem, 3vw, 2.5rem);
  font-weight: 400;
  color: #FFFFFF;
  margin: 0 0 50px;
  letter-spacing: 1px;
}

.comparison-table {
  background: rgba(255, 255, 255, 0.03);
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
}

.comparison-table__header {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  background: linear-gradient(135deg, rgba(128, 128, 128, 0.9) 0%, rgba(96, 96, 96, 0.9) 100%);
  padding: 20px;
  gap: 20px;
}

.comparison-table__header-cell {
  text-align: center;
  font-size: 1.1rem;
  font-weight: 700;
  color: #FFFFFF;
  text-transform: uppercase;
  letter-spacing: 2px;
}

.comparison-table__header-cell:first-child {
  text-align: left;
  padding-left: 20px;
}

.comparison-table__body {
  background: rgba(255, 255, 255, 0.05);
}

.comparison-table__row {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  padding: 24px 20px;
  gap: 20px;
  border-bottom: 1px solid rgba(255, 255, 255, 0.08);
  transition: all 0.3s ease;
}

.comparison-table__row:last-child {
  border-bottom: none;
}

.comparison-table__row:hover {
  background: rgba(212, 175, 55, 0.05);
}

.comparison-table__feature {
  color: #FFFFFF;
  font-size: 1rem;
  font-weight: 400;
  padding-left: 20px;
  display: flex;
  align-items: center;
}

.comparison-table__value {
  display: flex;
  justify-content: center;
  align-items: center;
}

.comparison-table__icon {
  width: 32px;
  height: 32px;
}

.comparison-table__icon--check {
  color: #4CAF50;
}

.comparison-table__icon--cross {
  color: #F44336;
}

@media screen and (max-width: 768px) {
  .why-choose-comparison {
    padding: 50px 15px;
    margin: 40px 0;
  }

  .comparison-table__header,
  .comparison-table__row {
    grid-template-columns: 1.5fr 1fr 1fr;
    padding: 16px 12px;
    gap: 12px;
  }

  .comparison-table__header-cell {
    font-size: 0.85rem;
    letter-spacing: 1px;
  }

  .comparison-table__header-cell:first-child,
  .comparison-table__feature {
    padding-left: 12px;
  }

  .comparison-table__feature {
    font-size: 0.9rem;
  }

  .comparison-table__icon {
    width: 28px;
    height: 28px;
  }
}

@media screen and (max-width: 480px) {
  .comparison-table__header-cell {
    font-size: 0.75rem;
  }

  .comparison-table__feature {
    font-size: 0.85rem;
  }

  .comparison-table__icon {
    width: 24px;
    height: 24px;
  }
}
</style>

