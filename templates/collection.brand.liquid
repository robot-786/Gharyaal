{% comment %}
  Brand Landing Page Template
  Shows subcategories for each brand (Rolex, Patek Philippe, etc.)
  Usage: Assign to brand collections in Shopify admin
{% endcomment %}

<div class="brand-landing-page">
  {%- comment -%} Brand Hero Section {%- endcomment -%}
  <div class="brand-hero" style="{% if collection.image %}background-image: url('{{ collection.image | image_url: width: 1920 }}');{% endif %}">
    <div class="brand-hero-overlay"></div>
    <div class="brand-hero-content page-width">
      <h1 class="brand-title">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="brand-description">{{ collection.description }}</div>
      {% endif %}
    </div>
  </div>

  {%- comment -%} Subcategories Grid {%- endcomment -%}
  <div class="subcategories-section page-width">
    <h2 class="section-heading">Shop by Collection</h2>
    
    <div class="subcategories-grid">
      {% comment %}
        Get all collections that match this brand
        For example, if this is 'rolex', get 'rolex-submariner', 'rolex-daytona', etc.
      {% endcomment %}
      
      {% assign brand_handle = collection.handle %}
      {% assign subcollections = '' %}
      
      {% for col in collections %}
        {% if col.handle contains brand_handle and col.handle != brand_handle %}
          <div class="subcategory-card">
            <a href="{{ col.url }}" class="subcategory-link">
              <div class="subcategory-image">
                {% if col.image %}
                  <img 
                    src="{{ col.image | image_url: width: 400 }}"
                    srcset="{{ col.image | image_url: width: 300 }} 300w,
                            {{ col.image | image_url: width: 400 }} 400w,
                            {{ col.image | image_url: width: 600 }} 600w"
                    sizes="(max-width: 768px) 50vw, 25vw"
                    alt="{{ col.title }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% elsif col.products.first and col.products.first.featured_image %}
                  <img 
                    src="{{ col.products.first.featured_image | image_url: width: 400 }}"
                    alt="{{ col.title }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="subcategory-placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                <div class="subcategory-overlay">
                  <span class="subcategory-cta">View Collection</span>
                </div>
              </div>
              <div class="subcategory-info">
                <h3 class="subcategory-title">{{ col.title | replace: collection.title, '' | strip }}</h3>
                <p class="subcategory-count">{{ col.products_count }} {% if col.products_count == 1 %}watch{% else %}watches{% endif %}</p>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {%- comment -%} Featured Products from Brand {%- endcomment -%}
  {% if collection.products.size > 0 %}
    <div class="brand-featured-products page-width">
      <h2 class="section-heading">Featured {{ collection.title }} Watches</h2>
      
      <div class="featured-products-grid">
        {% for product in collection.products limit: 8 %}
          <div class="featured-product-card">
            {% render 'product-card', product: product %}
          </div>
        {% endfor %}
      </div>
      
      <div class="view-all-wrapper">
        <a href="{{ collection.url }}/all" class="button button-secondary">View All {{ collection.title }} Watches</a>
      </div>
    </div>
  {% endif %}

  {%- comment -%} Brand Story/USP Section {%- endcomment -%}
  <div class="brand-story-section page-width">
    <div class="brand-story-content">
      <h2 class="section-heading">Why Choose {{ collection.title }}?</h2>
      <div class="brand-features">
        <div class="brand-feature">
          <div class="feature-icon">âœ“</div>
          <h3>Authentic Quality</h3>
          <p>Premium 1:1 super clone replicas with meticulous attention to detail</p>
        </div>
        <div class="brand-feature">
          <div class="feature-icon">âš¡</div>
          <h3>Fast Delivery</h3>
          <p>Express shipping across Pakistan within 2-3 business days</p>
        </div>
        <div class="brand-feature">
          <div class="feature-icon">ðŸ”’</div>
          <h3>Secure Payment</h3>
          <p>Cash on Delivery available with secure payment options</p>
        </div>
        <div class="brand-feature">
          <div class="feature-icon">ðŸ’Ž</div>
          <h3>Best Price</h3>
          <p>Guaranteed lowest prices in Pakistan with quality assurance</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
/* Brand Landing Page Styles */
.brand-landing-page {
  background: var(--gharyaal-black, #000000);
  color: var(--gharyaal-white, #ffffff);
}

/* Brand Hero */
.brand-hero {
  position: relative;
  height: 400px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-size: cover;
  background-position: center;
  background-color: var(--gharyaal-charcoal, #0a0a0a);
  margin-bottom: 60px;
}

.brand-hero-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.8) 100%);
}

.brand-hero-content {
  position: relative;
  z-index: 2;
  text-align: center;
  padding: 40px 20px;
}

.brand-title {
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 700;
  color: var(--gharyaal-gold, #D4AF37);
  margin: 0 0 1rem;
  text-transform: uppercase;
  letter-spacing: 3px;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
}

.brand-description {
  font-size: clamp(1rem, 2vw, 1.25rem);
  max-width: 800px;
  margin: 0 auto;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
}

/* Section Headings */
.section-heading {
  font-size: clamp(1.75rem, 4vw, 2.5rem);
  font-weight: 700;
  color: var(--gharyaal-gold, #D4AF37);
  text-align: center;
  margin: 0 0 3rem;
  text-transform: uppercase;
  letter-spacing: 2px;
}

/* Subcategories Section */
.subcategories-section {
  padding: 60px 20px;
}

.subcategories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 30px;
  margin-bottom: 40px;
}

.subcategory-card {
  background: var(--gharyaal-dark-gray, #1a1a1a);
  border-radius: 8px;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.subcategory-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(212, 175, 55, 0.3);
}

.subcategory-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

.subcategory-image {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  overflow: hidden;
  background: var(--gharyaal-mid-gray, #2d2d2d);
}

.subcategory-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.subcategory-card:hover .subcategory-image img {
  transform: scale(1.1);
}

.subcategory-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.8) 100%);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 20px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.subcategory-card:hover .subcategory-overlay {
  opacity: 1;
}

.subcategory-cta {
  color: var(--gharyaal-gold, #D4AF37);
  font-weight: 600;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.subcategory-info {
  padding: 20px;
}

.subcategory-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--gharyaal-white, #ffffff);
  margin: 0 0 0.5rem;
  text-transform: capitalize;
}

.subcategory-count {
  font-size: 0.875rem;
  color: var(--gharyaal-gold, #D4AF37);
  margin: 0;
}

.subcategory-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--gharyaal-mid-gray, #2d2d2d);
}

/* Featured Products */
.brand-featured-products {
  padding: 80px 20px;
  background: var(--gharyaal-charcoal, #0a0a0a);
}

.featured-products-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
  gap: 30px;
  margin-bottom: 40px;
}

.view-all-wrapper {
  text-align: center;
  margin-top: 40px;
}

/* Brand Story */
.brand-story-section {
  padding: 80px 20px;
}

.brand-features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 40px;
  margin-top: 40px;
}

.brand-feature {
  text-align: center;
  padding: 30px 20px;
  background: var(--gharyaal-dark-gray, #1a1a1a);
  border-radius: 8px;
  transition: transform 0.3s ease;
}

.brand-feature:hover {
  transform: translateY(-5px);
}

.feature-icon {
  font-size: 2.5rem;
  color: var(--gharyaal-gold, #D4AF37);
  margin-bottom: 1rem;
}

.brand-feature h3 {
  font-size: 1.25rem;
  color: var(--gharyaal-white, #ffffff);
  margin: 0 0 0.75rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.brand-feature p {
  font-size: 0.9rem;
  color: rgba(255, 255, 255, 0.7);
  line-height: 1.6;
  margin: 0;
}

/* Mobile Responsive */
@media screen and (max-width: 768px) {
  .brand-hero {
    height: 300px;
  }

  .subcategories-grid {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 20px;
  }

  .featured-products-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .brand-features {
    grid-template-columns: 1fr;
    gap: 30px;
  }

  .subcategories-section,
  .brand-featured-products,
  .brand-story-section {
    padding: 40px 20px;
  }
}

@media screen and (max-width: 480px) {
  .featured-products-grid {
    grid-template-columns: 1fr;
  }
}
</style>
