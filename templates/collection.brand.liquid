{% comment %}
  Brand Landing Page Template
  Shows subcategories for each brand (Rolex, Patek Philippe, etc.)
  Usage: Assign to brand collections in Shopify admin
{% endcomment %}

<div class="brand-landing-page">
  {%- comment -%} Brand Logo Section {%- endcomment -%}
  <div class="brand-logo-hero">
    <div class="brand-logo-center">
      {%- liquid
        assign logo_filename = ''
        case collection.handle
          when 'rolex'
            assign logo_filename = 'brand-rolex-logo.png'
          when 'patek-philippe'
            assign logo_filename = 'brand-patek-logo.png'
          when 'audemars-piguet'
            assign logo_filename = 'brand-ap-logo.png'
          when 'omega'
            assign logo_filename = 'brand-omega-logo.png'
          when 'tag-heuer'
            assign logo_filename = 'brand-th-logo.png'
          when 'tissot'
            assign logo_filename = 'brand-tissot-logo.png'
          when 'hublot'
            assign logo_filename = 'brand-hublot-logo.png'
        endcase
      -%}
      {% if logo_filename != '' %}
        <img 
          src="{{ logo_filename | asset_url }}" 
          alt="{{ collection.title }} Logo"
          class="brand-hero-logo"
          width="300"
          height="240"
          loading="eager"
        >
      {% else %}
        <img 
          src="{{ 'logo.png' | asset_url }}" 
          alt="{{ shop.name }}"
          class="brand-fallback-gharyaal-logo"
          loading="eager"
        >
        <h1 class="brand-title-fallback">{{ collection.title }}</h1>
      {% endif %}
    </div>
    {% comment %} <h1 class="brand-title">{{ collection.title }}</h1> {% endcomment %}
    {% if collection.description != blank %}
      <div class="brand-description">{{ collection.description }}</div>
    {% endif %}
  </div>

  {%- comment -%} Sub Brands Grid {%- endcomment -%}
  <div class="subcategories-section page-width">
    <h2 class="section-heading">categories</h2>
    
    <div class="subcategories-grid">
      {% comment %}
        Get all collections that match this brand
        For example, if this is 'rolex', get 'rolex-submariner', 'rolex-daytona', etc.
      {% endcomment %}
      
      {% assign brand_handle = collection.handle %}
      {% assign subcollections = '' %}
      
      {% for col in collections %}
        {%- liquid
          assign show_collection = false
          assign col_handle_lower = col.handle | downcase
          
          # Only show collections that START with the brand handle (e.g., rolex-submariner for rolex)
          # This prevents super-clone-rolex from showing on rolex page
          assign brand_prefix = brand_handle | append: '-'
          
          if col.handle contains brand_prefix and col.handle != brand_handle
            # Check if the collection handle actually starts with the brand
            assign handle_start = col.handle | slice: 0, brand_prefix.size
            if handle_start == brand_prefix
              assign show_collection = true
            endif
          endif
          
          # Special handling for OZ/RX and Super Clone brands
          # Only exclude if we're NOT on their parent brand page
          if show_collection == true
            if brand_handle != 'oz-rx-quality' and brand_handle != 'super-clone'
              # Exclude OZ/RX and Super Clone subcollections from showing on other brand pages
              if col_handle_lower contains 'oz-rx-quality' or col_handle_lower contains 'super-clone'
                assign show_collection = false
              endif
            endif
          endif
        -%}
        
        {% if show_collection %}
          <div class="subcategory-card">
            <a href="{{ col.url }}" class="subcategory-link">
              <div class="subcategory-image">
                {% if col.image %}
                  <img 
                    src="{{ col.image | image_url: width: 400 }}"
                    srcset="{{ col.image | image_url: width: 300 }} 300w,
                            {{ col.image | image_url: width: 400 }} 400w,
                            {{ col.image | image_url: width: 600 }} 600w"
                    sizes="(max-width: 768px) 50vw, 25vw"
                    alt="{{ col.title }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% elsif col.products.first and col.products.first.featured_image %}
                  <img 
                    src="{{ col.products.first.featured_image | image_url: width: 400 }}"
                    alt="{{ col.title }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="subcategory-placeholder">
                    {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                  </div>
                {% endif %}
                <div class="subcategory-overlay">
                  <span class="subcategory-cta">View Collection</span>
                </div>
              </div>
              <div class="subcategory-info">
                <h3 class="subcategory-title">{{ col.title | replace: collection.title, '' | strip }}</h3>
                <p class="subcategory-count">{{ col.products_count }} {% if col.products_count == 1 %}watch{% else %}watches{% endif %}</p>
              </div>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
/* Brand Landing Page Styles */
.brand-landing-page {
  background: var(--gharyaal-black, #000000);
  color: var(--gharyaal-white, #ffffff);
}

/* Brand Logo Hero */
.brand-logo-hero {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80px 20px 60px;
  text-align: center;
  background: linear-gradient(180deg, rgba(0,0,0,1) 0%, rgba(10,10,10,1) 100%);
}

.brand-logo-center {
  width: 300px;
  min-height: 240px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom: 30px;
  gap: 20px;
}

.brand-hero-logo {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  filter: brightness(1.1);
}

.brand-fallback-gharyaal-logo {
  max-width: 200px;
  height: auto;
  object-fit: contain;
  margin-bottom: 10px;
}

.brand-title-fallback {
  font-size: clamp(2rem, 5vw, 3rem);
  font-weight: 700;
  color: #D4AF37;
  margin: 0;
  text-transform: uppercase;
  letter-spacing: 3px;
  text-shadow: 0 0 20px rgba(212, 175, 55, 0.5);
  text-align: center;
  line-height: 1.2;
}

.brand-title {
  font-size: clamp(2.5rem, 6vw, 4.5rem);
  font-weight: 700;
  color: var(--gharyaal-gold, #D4AF37);
  margin: 0 0 1rem;
  text-transform: uppercase;
  letter-spacing: 3px;
  text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.8);
}

.brand-description {
  font-size: clamp(1rem, 2vw, 1.25rem);
  max-width: 800px;
  margin: 0 auto;
  line-height: 1.6;
  color: rgba(255, 255, 255, 0.9);
}

/* Section Headings */
.section-heading {
  font-size: clamp(1.75rem, 4vw, 2.5rem);
  font-weight: 700;
  color: var(--gharyaal-gold, #D4AF37);
  text-align: center;
  margin: 0 0 3rem;
  text-transform: uppercase;
  letter-spacing: 2px;
}

/* Subcategories Section */
.subcategories-section {
  padding: 60px 20px;
}

.subcategories-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 30px;
  margin-bottom: 40px;
}

.subcategory-card {
  background: var(--gharyaal-dark-gray, #1a1a1a);
  border-radius: 8px;
  overflow: hidden;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.subcategory-card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 40px rgba(212, 175, 55, 0.3);
}

.subcategory-link {
  display: block;
  text-decoration: none;
  color: inherit;
}

.subcategory-image {
  position: relative;
  width: 100%;
  aspect-ratio: 1;
  overflow: hidden;
  background: var(--gharyaal-mid-gray, #2d2d2d);
}

.subcategory-image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.4s ease;
}

.subcategory-card:hover .subcategory-image img {
  transform: scale(1.1);
}

.subcategory-overlay {
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.8) 100%);
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding: 20px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.subcategory-card:hover .subcategory-overlay {
  opacity: 1;
}

.subcategory-cta {
  color: var(--gharyaal-gold, #D4AF37);
  font-weight: 600;
  font-size: 0.9rem;
  text-transform: uppercase;
  letter-spacing: 1px;
}

.subcategory-info {
  padding: 20px;
}

.subcategory-title {
  font-size: 1.125rem;
  font-weight: 600;
  color: var(--gharyaal-white, #ffffff);
  margin: 0 0 0.5rem;
  text-transform: capitalize;
}

.subcategory-count {
  font-size: 0.875rem;
  color: var(--gharyaal-gold, #D4AF37);
  margin: 0;
}

.subcategory-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: var(--gharyaal-mid-gray, #2d2d2d);
}

/* Mobile Responsive */
@media screen and (max-width: 768px) {
  .brand-hero {
    height: 300px;
  }

  .subcategories-grid {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 20px;
  }

  .subcategories-section {
    padding: 40px 20px;
  }
}
</style>
